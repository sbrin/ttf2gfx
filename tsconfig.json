    "target": "es5",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types"
